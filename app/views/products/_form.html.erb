<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>

    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@product.errors.count, "error") %> need fixing before this product can be saved.</h2>
      </div>
      <div class= "panel-body">
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="col-md-6">
    <div class="field">
      <%= f.label :title, "Product Name" %><br>
      <%= f.text_field :title, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :unit, "Type Unit KG or EA" %><br>
      <%= f.text_field :unit, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :image_url, "Image URL - Placed in assets/images" %><br>
      <%= f.text_field :image_url, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.text_field :price, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :special, "Product On Special" %><br>
      <%= f.check_box :special, :class => "form-control", :type => "checkbox" %>
    </div>
    <div class="field">
      <%= f.label :sprice, "Special Price" %><br>
      <%= f.text_field :sprice, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :department, "Department (FRUIT, VEGETABLE or OTHER)" %><br>
      <%= f.text_field :department, :class => "form-control", :type => "text" %>
    </div>
    <div class="field">
      <%= f.label :available, "Product Available For Purchase?" %><br>
      <%= f.check_box :available, :class => "form-control", :type => "checkbox" %>
    </div>
    <div class="actions">
      <%= f.submit 'Save Item', :class => "btn btn-success" %>
    </div>
  </div>
 
<% end %>

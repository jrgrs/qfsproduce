<!DOCTYPE html>

<html>

<div class="background-img">

	<div class="container">

	<head>
	  <title>QFS | Your Little Box Of Freshness</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>


	<div class="store-logo">
		<%= image_tag('QFS.png') %><br>
	</div>
	
	<nav class="navbar navbar-default" role="navigation">
	<ul class ="nav navbar-nav">
			<li><%= link_to "Home", home_url %></li>
			<li><%= link_to "Shop Online", store_index_url %></li>
			<li><%= link_to "Our Specials", specials_index_url %></li>
			<li><a href="#">Coverage Map</a></li>
			<li><a href="#">About QFS</a></li>
		</ul>

	<ul class="nav navbar-nav pull-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Your Trolley <b class="caret"></b></a>
			<ul class="dropdown-menu">
				<li>
					<div class="cart" id="cart">
					<%= render @cart %>
					</div>
				</li>
			</ul>
		</li>
		<% if session[:user_id] %>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
				<ul class="dropdown-menu">
				<li><%= link_to 'Orders', orders_path %></li>
				<li><%= link_to 'Products', products_path %></li>
				<li><%= link_to 'Manage Users', users_path %></li>
				<li class="divider"></li>
				<li><%= link_to 'Logout', logout_path, method: :delete %>
				</ul>
			</li>
		<% end %>
	</ul>
	</nav>

	

	<body>
		

		<div class="col-md-12">
			<%= yield %>
		</div>
	</body>

	</div>
</div>

<script>
$(document).ready(function(){
    $('.navbar .dropdown').hover(function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(50).slideDown();
    }, function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(100).slideUp()
    });
n})
</script>

</html>

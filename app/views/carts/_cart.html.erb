<p id="notice"><%= notice %></p>




<div class="col-md-12">
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>Item</th>
				<th>Quantity</th>
				<th>Unit Price</th>
				<th>Total Cost</th>
				<th></th>
			</tr>
		</thead>


		<tbody>
			<%= render(@cart.line_items) %>
			<tr>
				<td colspan="3" class="total-line">Total Cost:</td>
				<td><stong><%= number_to_currency(cart.total_price) %></stong></td>
			</tr>
		</tbody>
	</table>
</div>



<div class="col-md-6">

<%= button_to 'Empty My Trolley', cart, method: :delete, :class => "btn btn-danger", data: {confirm: 'Empty all items from your trolley?'} %>
</div>
<div class="col-md-4 push-right">
<%= button_to 'Checkout', new_order_path, method: :get, :class => "btn btn-success"%>
</div>